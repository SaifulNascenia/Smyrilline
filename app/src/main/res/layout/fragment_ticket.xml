<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/ll_booking_barcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bkg_light_grey"
        android:orientation="vertical"
        android:weightSum="10">

        <android.support.v7.widget.CardView
            android:id="@+id/cvTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlWelcomeHeader"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@android:color/white">

            <android.support.design.widget.TabLayout
                android:id="@+id/ticketTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/colorPrimary" />
        </android.support.v7.widget.CardView>

        <android.support.v4.view.ViewPager
            android:id="@+id/ticketPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvTabLayout" />
    </LinearLayout>
</ScrollView>