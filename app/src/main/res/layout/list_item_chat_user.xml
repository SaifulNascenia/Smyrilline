<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="95dp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rlUserItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlProPic"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProPic"
                android:layout_width="@dimen/chat_user_list_pic_size"
                android:layout_height="@dimen/chat_user_list_pic_size"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user"/>

            <ImageView
                android:id="@+id/imgOnlineIndicator"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bkg_user_online_indicator"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/editName"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_below="@+id/rlProPic"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lines="1"
            android:maxLength="10"
            android:text="@string/user"/>

        <TextView
            android:id="@+id/tvNewMessageCount"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:background="@drawable/bg_80_primary_3dp_corner"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="9sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>