<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/extra_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:visibility="gone"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_backdrop_height"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleGravity="left"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:paddingLeft="@dimen/tax_free_shop_bottom_layout_margin"
                    android:paddingRight="@dimen/tax_free_shop_bottom_layout_margin"
                    app:layout_collapseMode="parallax">

                    <TextView
                        android:id="@+id/location_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:text="Location"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="#FFFFFF" />

                </RelativeLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="?attr/actionBarSize"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/restaurent_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/restaurent_time_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/cardbackground" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/small_padding">


                            <ImageView
                                android:id="@+id/clock_imageView"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/time_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/bottom_indicator_view"
                                android:layout_marginBottom="8dp"
                                android:layout_toRightOf="@+id/clock_imageView"
                                android:text="Openings and Closing Time"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="@color/textColorSecondary"
                                android:textStyle="bold" />


                            <ImageView
                                android:id="@+id/expand_imageview"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/small_padding"
                                android:src="@drawable/down_arrow" />

                            <LinearLayout
                                android:id="@+id/bottom_indicator_view"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_below="@+id/expand_imageview"
                                android:layout_marginTop="@dimen/small_margin"
                                android:background="@drawable/cardbackground"
                                android:orientation="horizontal" />


                            <LinearLayout
                                android:id="@+id/restaurent_time_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bottom_indicator_view"
                                android:layout_margin="20dp"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/breakfasttime_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Breakfast time: 08:00-22:00"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/textColorSecondary" />

                                <TextView
                                    android:id="@+id/launchtime_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Launch time: 08:00-22:00"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/textColorSecondary" />

                                <TextView
                                    android:id="@+id/dinnertime_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Dinner time: 08:00-22:00"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/textColorSecondary" />
                            </LinearLayout>

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/restaurent_Details_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/restaurent_time_info_view"
                        android:layout_marginTop="@dimen/small_margin"
                        android:background="#FFFFFF"
                        app:cardCornerRadius="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/cardbackground" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small_padding">

                            <TextView
                                android:id="@+id/expandable_TextView"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:text="hello world"
                                android:textColor="@color/textColorSecondary" />

                            <TextView
                                android:id="@+id/toggle_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/expandable_TextView"
                                android:text="view more"
                                android:textColor="@color/textColorSecondary"
                                android:visibility="gone" />

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/adult_children_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/restaurent_Details_view"
                        android:layout_marginTop="@dimen/small_margin"
                        app:cardCornerRadius="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/cardbackground" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    style="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/light_grey_bkg"
                                    android:gravity="center"
                                    android:text="Adults"
                                    android:textColor="@color/grey_black_textcolor"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center"
                                    android:text="Children\n(3-11y)"
                                    android:textColor="@color/windowBackground"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/small_margin"
                                android:layout_marginRight="@dimen/small_margin"
                                android:layout_marginTop="@dimen/medium_margin"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2">

                                    <TextView
                                        android:id="@+id/breakfast_title_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Breakfast buffet"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="bold" />

                                    <TextView
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/breakfast_title_textview"
                                        android:text="No available during the winter sailing"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="normal" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/small_margin"
                                    android:layout_weight="2.02">

                                    <TextView
                                        android:id="@+id/prebook_title_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Prebook:"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/prebook_price_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/prebook_title_textview"
                                        android:text=" $30"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/onboard_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/prebook_title_textview"
                                        android:text="Onboard price: $16.100"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="normal" />


                                    <TextView
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/onboard_textview"
                                        android:text="Save: 14%"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="normal" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_weight=".8"
                                    android:paddingLeft="@dimen/small_padding">

                                    <TextView
                                        android:id="@+id/times_title_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Times"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="bold" />

                                    <TextView
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/times_title_textview"
                                        android:text="07:00-10:00"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="normal" />

                                </RelativeLayout>


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/medium_margin"
                                android:layout_marginTop="@dimen/medium_margin"
                                android:background="@drawable/cardbackground" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/small_margin"
                                android:layout_marginRight="@dimen/medium_margin"
                                android:layout_marginTop="@dimen/small_margin"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2">

                                    <TextView
                                        android:id="@+id/dinner_title_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Breakfast buffet"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="bold" />

                                    <TextView
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/dinner_title_textview"
                                        android:text="No available during the winter sailing"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="normal" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/small_margin"
                                    android:layout_weight="2.02">

                                    <TextView
                                        android:id="@+id/bottom_prebook_title_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Prebook:"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/bottom_prebook_price_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/bottom_prebook_title_textview"
                                        android:text=" $30"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/bottom_onboard_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/bottom_prebook_title_textview"
                                        android:text="Onboard price: $16.1000"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="normal" />


                                    <TextView
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/bottom_onboard_textview"
                                        android:text="Save: 14%"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="normal" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".8"
                                    android:paddingLeft="@dimen/small_padding">

                                    <TextView
                                        android:id="@+id/seating_times_textview"
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Times"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="bold" />

                                    <TextView
                                        style="@style/TextAppearance.AppCompat.Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/seating_times_textview"
                                        android:text="(Table served for 2 hours)"
                                        android:textSize="@dimen/resturent_info_Textsize"
                                        android:textStyle="normal" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/breakfast_item_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/adult_children_view"
                        android:layout_marginTop="@dimen/small_margin"
                        card_view:cardCornerRadius="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/cardbackground" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/small_padding">


                            <TextView
                                android:id="@+id/breakfast_list_title_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:text="Breakfast"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="@color/textColorSecondary"
                                android:textStyle="bold" />


                            <ImageView
                                android:id="@+id/breakfast_list_expand_imageview"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/small_padding"
                                android:src="@drawable/down_arrow" />

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/breakfast_list_item_recylerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/breakfast_item_view"
                        android:layout_marginTop="@dimen/small_margin" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/lunch_item_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/breakfast_item_view"
                        android:layout_marginTop="@dimen/small_margin"
                        card_view:cardCornerRadius="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/cardbackground" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/small_padding">


                            <TextView
                                android:id="@+id/lunch_list_title_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:text="Lunch"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="@color/textColorSecondary"
                                android:textStyle="bold" />


                            <ImageView
                                android:id="@+id/lunch_list_expand_imageview"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/small_padding"
                                android:src="@drawable/down_arrow" />

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/lunch_list_item_recylerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lunch_item_view"
                        android:layout_marginTop="@dimen/small_margin" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/dinner_item_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lunch_item_view"
                        android:layout_marginTop="@dimen/small_margin"
                        card_view:cardCornerRadius="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/cardbackground" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/small_padding">


                            <TextView
                                android:id="@+id/dinner_list_title_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:text="Dinner"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="@color/textColorSecondary"
                                android:textStyle="bold" />


                            <ImageView
                                android:id="@+id/dinner_list_expand_imageview"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/small_padding"
                                android:src="@drawable/down_arrow" />

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/dinner_list_item_recylerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dinner_item_view"
                        android:layout_marginTop="@dimen/small_margin" />


                    <android.support.v7.widget.CardView
                        android:id="@+id/dinnefasdfr_item_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dinner_list_item_recylerView"
                        card_view:cardCornerRadius="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/cardbackground" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
