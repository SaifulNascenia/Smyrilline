<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_with_bottom_border"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/imgMealThumb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:src="@drawable/img_sample_meal" />

        <TextView
            android:id="@+id/tvMealDescription"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.8"
            android:gravity="left|bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Norrona buffet"></TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="bottom"
            android:orientation="vertical"
            android:weightSum="5">

            <Button
                android:id="@+id/btnMealUse"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/bkg_meal_use"
                android:text="@string/use"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mealDateDivider"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/bkg_light_grey"
        android:orientation="horizontal"
        android:visibility="gone" />
</LinearLayout>